{
  "description": "Complete 6-step bike listing structure for AI agents",
  "instructions": "Use the specified tools to get available options for each field",
  "steps": {
    "step_1": {
      "title": "Basic Bike Information",
      "required": true,
      "tools_to_use": [
        "list_bike_types",
        "search_brands",
        "validate_step1"
      ],
      "fields": {
        "bike_type_id": {
          "description": "Main bike category",
          "tool": "list_bike_types",
          "validation": "Must exist in bike types",
          "example": 1
        },
        "brand_id": {
          "description": "Bike manufacturer",
          "tool": "search_brands",
          "validation": "Must exist in brands list",
          "example": 150
        },
        "family_id": {
          "description": "Auto-selected custom family for brand",
          "tool": "auto_selected",
          "validation": "Always use custom_family_id from brand",
          "note": "This is automatically filled by the system"
        }
      }
    },
    "step_2": {
      "title": "Technical Specifications",
      "required": true,
      "tools_to_use": [
        "get_bike_categories",
        "get_components_for_type",
        "get_frame_materials",
        "validate_step2"
      ],
      "fields": {
        "bike_category_id": {
          "description": "Specific bike subcategory",
          "tool": "get_bike_categories",
          "validation": "Must match selected bike_type_id"
        },
        "motor": {
          "description": "Electric motor present",
          "options": [
            true,
            false
          ],
          "validation": "Boolean value only"
        },
        "year": {
          "description": "Manufacturing year",
          "validation": "Integer between 1980-2025"
        },
        "frame_material_code": {
          "description": "Frame material type",
          "tool": "get_frame_materials",
          "options": [
            "carbon",
            "aluminum",
            "titanium",
            "steel",
            "magnesium"
          ]
        },
        "bike_component_id": {
          "description": "Component groupset",
          "tool": "get_components_for_type",
          "validation": "Must be compatible with bike_type_id"
        }
      }
    }
  },
